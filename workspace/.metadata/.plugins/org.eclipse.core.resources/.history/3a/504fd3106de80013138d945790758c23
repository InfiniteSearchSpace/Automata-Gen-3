import javax.swing.JFrame;


public class ToggleFrame extends JFrame {
	
	ClickPanel[][] pp;
	
	public ToggleFrame() {
		
		
		int panelSize = 18;
		int panels = 8;
		int frameSize = (panelSize+2)*(panels+1);
		
		setLayout(null);
		setSize(frameSize+8, frameSize+28);
		setVisible(true);
		setResizable(false);
		
		int panelsX = ((frameSize/(panelSize+2))+3);
		int panelsY = ((frameSize/(panelSize+2))+0);
		
		
		pp = new ClickPanel[panelsX][panelsY];
		
		for(int i = 0; i < panelsX; i++) {
			for(int j = 0; j < panelsY; j++) {
	    		pp[i][j] = new ClickPanel(2, i, j, panelSize);
	    		add(pp[i][j]);
			}
		}
		
	}
	
	public int [][] getPanelStates() {
		int[][] output = new int[pp.length][pp[0].length];
    	String ss = "";
    	for(int j = 0; j < pp.length; j++) {
    		for(int i = 0; i < pp[j].length; i++) {
        		output[i][j] = pp[i][j].val;
        		ss+=output[i][j] + ",";
        	}
    		ss+="\n";
    	}
    	System.out.println(ss);
    	return output;
	}
	
	
}
