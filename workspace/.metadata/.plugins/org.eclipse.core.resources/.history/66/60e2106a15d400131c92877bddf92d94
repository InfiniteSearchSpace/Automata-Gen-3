
public class dataSources {
	
	public int[][][] sources;
	
	int xPos;
	int yPos;
	int zPos;
	ml m;
	
	public dataSources(int[][][] ar, ml mm) {
		setArray(ar);
		m = mm;
	}
	
	public int readNext() {
		
		xPos++;
		if(xPos>sources.length-1) {
			xPos=0;
			yPos++;
		}
		
		if(yPos>sources[0].length-1) {
			yPos=0;
			zPos++;
		}
		
		if(zPos>sources[0][0].length-1) {
			zPos=0;
		}
		
		return sources[xPos][yPos][zPos];
		
	}

	public void setArray(int[][][] ar){
		sources = ar;
	}
	
	public void captureData(){
		int[][][] resultAr;
		resultAr = new int[m.blockSize][m.blockSize][1];
		
		//use block placement decendent as capture device for u.universe
		
		
		sources = resultAr;
	}
	
}
