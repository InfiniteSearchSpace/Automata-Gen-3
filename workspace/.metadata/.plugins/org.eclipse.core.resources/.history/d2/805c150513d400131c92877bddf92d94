
public class dataSources {
	
	public int[][][] sources;
	
	int xPos;
	int yPos;
	int zPos;
	
	public dataSources(int[][][] ar) {
		setArray(ar);
	}
	
	public int readNext() {
		
		xPos++;
		if(xPos>sources.length) {
			xPos=0;
			yPos++;
		}
		
		if(yPos>sources.length) {
			yPos=0;
			zPos++;
		}
		
		if(zPos>sources.length) {
			zPos=0;
		}
		
		return sources[xPos][yPos][zPos];
		
	}

	public void setArray(int[][][] ar){
		sources = ar;
	}
	
}
