import javax.swing.JFrame;
import javax.swing.SwingUtilities;


@SuppressWarnings("serial")
public class Main extends JFrame {

	public static void main(String[] args) {
		
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() { //breaks program's static dependance

            	Main m = new Main(); //make instance of self (jframe)
            	
            	m.setSize(512, 512); 	//set frame size
            	m.setVisible(true); 	//show frame
            	m.setLocation(32, 32); //force location
            	
            	SurfacePanel s = new SurfacePanel(512); //new 'drawing board'
            	s.setSize(512); //set size to frame size (reduce if adding GUI)
            	m.add(s); //add it to Main container
            	
            }
        });
    }
    
}