
public class dataSources {
	
	public int[][][] sources;
	
	int xPos;
	int yPos;
	int zPos;
	
	public dataSources(int[][][] ar) {
		setArray(ar);
	}
	
	public int readNext() {
		
		
		if(xPos%sources.length-1 == 0 && xPos !=0) {
			xPos=0;
			yPos++;
		}
		
		if(yPos%sources.length-1 == 0 && yPos !=0) {
			yPos=0;
			zPos++;
		}
		
		if(zPos%sources.length-1 == 0 && zPos !=0) {
			zPos=0;
		}
		xPos++;
		return sources[xPos][yPos][zPos];
		
	}

	public void setArray(int[][][] ar){
		sources = ar;
	}
	
}
