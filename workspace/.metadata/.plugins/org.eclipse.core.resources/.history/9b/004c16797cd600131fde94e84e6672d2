
import javax.swing.JSlider;
import javax.swing.event.ChangeEvent;
import javax.swing.event.ChangeListener;


public class slider implements ChangeListener {
	
	ml myml;
	
	public slider(Main m, int xSize, int ySize, int zSize, ml mymml) {
	    myml = mymml;
	    
		JSlider mySlide = new JSlider(JSlider.VERTICAL, 0, 25, 0);
	    mySlide.setVisible(true);
	    mySlide.setLayout(null); 
	    mySlide.setBounds(xSize+105, 4, 34, ySize+16);
	    mySlide.setVisible(true);
	    mySlide.setMajorTickSpacing(10);
	    mySlide.setMinorTickSpacing(1);
	    mySlide.setPaintTicks(true);
	        
	    mySlide.addChangeListener(this);

	    m.add(mySlide);
	 }

	public void stateChanged(ChangeEvent e) {
		JSlider source = (JSlider)e.getSource();
		if (source.getValueIsAdjusting()) {
	      	int sldVal = (int)source.getValue();
	      	myml.slideVal = sldVal;
	      	myml.setRuleGDThresh();
	      	//System.out.println(sliderVal);
	 	}
	}
	

}
